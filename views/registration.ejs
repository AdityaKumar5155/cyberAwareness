    <script>
      function onlyAlphabets(event) {
    // Get the character that the user is trying to enter.
    var charCode = event.which || event.keyCode;

    let input = document.getElementById("myInput")
    let length = input.value.length
    
    // Check if the character is an alphabet.
    if ((charCode >= 65 && charCode <= 90 || charCode >= 97 && charCode <= 122 ) && length!=1) {
      // The character is an alphabet, so allow it to be entered.
      return true;
    } else {
      // The character is not an alphabet, so prevent it from being entered.
      return false;
    }
  }
    </script>
